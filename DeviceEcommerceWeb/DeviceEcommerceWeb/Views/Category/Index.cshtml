<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>Category Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
	<style type="text/css">
		.border{
			margin:20px;
			padding:20px 40px;
			border: solid 1px gray;
			border-radius: 30px;
			width:100%;
		}
		.border h1{
			margin-bottom: 20px;
		}
	</style>
    </head>
    <body>
		<div class="border">
		<h1>Category List</h1>
		<table class="table" style="width: 100%">
			<colgroup>
				<col span="1" style="width: 10%;">
				<col span="1" style="width: 30%;">
				<col span="1" style="width: 30%;">
				<col span="1" style="width: 30%;">
			</colgroup>
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Name</th>
					<th scope="col">Description</th>
					<th scope="col">Function</th>
				</tr>
			</thead>
			<tbody class="body">
				
				@foreach (var category in ViewBag.Categories)
				{
					<tr>
						<th scope="col">@category.Id</th>
						<th scope="col">@category.Name</th>
						<th scope="col">@category.Description</th>
						<th scope="col">
							<div class="row">
								<div class="col-lg-6 col-sm-6">
									<a href="@Url.Action("Edit", "Category", new { id = category?.Id ?? 0 })">
										@* <span style="padding: 0 5px; color:green; font-weight:100" class="edit-btn">Edit</span> *@
										<button type="submit" class="btn btn-primary">Edit</button>
									</a>
								</div>
								<div class="col-lg-6 col-sm-6">
									<form asp-controller="Category" asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this category?');">
										<input type="hidden" name="id" value="@category?.Id" />
										<button type="submit" class="btn btn-danger">Delete</button>
										@* <a><span style="padding: 0 5px;color:Red; font-weight:100" class="delete-btn" type="submit">Delete</span></a> *@
									</form>
								</div>
							</div>
							
						</th>
					</tr>
				}
			</tbody>
		</table>
		<a href="@Url.Action("Create", "Category")" class="btn btn-primary ">Add New Category</a>
		</div>
	
        
    </body>
</html>
