@model DeviceEcommerceWeb.Models.Category
@{
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>Edit Category</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<style type="text/css">
		.card-body {
			margin: 20px;
			padding: 20px 40px;
			border: solid 1px gray;
			border-radius: 30px;
			width: 100%;
		}

			.card-body h1 {
				margin-bottom: 20px;
			}
	</style>
</head>
<body>

	<div class="card-body">
		<h1>Edit Category</h1>
		<div class="row g-xl-5 g-3">
			<form asp-controller="Category" asp-action="Edit" method="post" enctype="multipart/form-data">
				<input type="hidden" name="Id" value="@Model.Id" />
			
				<div class="form-group">
					<label for="Name">Name<span style="color:red;">*</span></label>
					<br>
					<input type="text" id="Name" name="Name" value="@Model.Name" class="form-control input-sm"
						   required>
					<br>
				</div>
				<div class="form-group">
					<label for="Description">Description<span style="color:red;">*</span></label>
					<br>
					<input type="text" id="Description" name="Description" value="@Model.Description" class="form-control input-sm"
						   required>
					<br>
				</div>
				<button class="btn btn-success" style="margin-top: 20px" type="submit">Save</button>
			</form>
		</div>
	</div>
</body>
</html>
