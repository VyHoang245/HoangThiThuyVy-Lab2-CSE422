<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>Add Category</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<style type="text/css">
		.card-body {
			margin: 20px;
			padding: 20px 40px;
			border: solid 1px gray;
			border-radius: 30px;
			width: 100%;
		}

			.card-body h1 {
				margin-bottom: 20px;
			}
	</style>
</head>
<body>
    <div class="border">
        <h1>Create User</h1>
        <form asp-controller="User" asp-action="Create" method="post">
            <div class="form-group">
                <label>Full Name</label>
                <input id="FullName" name="FullName" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input id="Email" name="Email" type="email" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Phone Number</label>
                <input id="PhoneNumber" name="PhoneNumber" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="@Url.Action("Index", "User")" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
</html>